{
  "name": "ngx-warehouse",
  "version": "1.0.0",
  "description": "An offline storage solution for Angular apps",
  "main": "./dist/umd/ngx-warehouse.js",
  "module": "./dist/esm/src/index.js",
  "typings": "./dist/esm/src/index.d.ts",
  "scripts": {
    "start":
      "concurrently --raw \"webpack-dev-server --open\" \"npm run test:watch\"",
    "build:demo": "webpack -p",
    "build:umd": "webpack --config webpack.config.umd.js",
    "build:ngc": "ngc -p tsconfig-ngc.json",
    "build:dist": "npm run build:umd && npm run build:ngc",
    "build:clean": "rm -rf dist",
    "test": "karma start",
    "test:watch": "karma start --watch",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "typedoc": "typedoc --options typedoc.json src/*.ts",
    "gh-pages":
      "git checkout gh-pages && git merge master --no-edit && npm run build:demo && npm run typedoc && git add . && git commit -m \"chore: build demo and docs\" && git push && git checkout master",
    "release":
      "git add package.json && git commit -m \"chore: bump version number\" && standard-version --first-release && git push --follow-tags origin master && npm run build:dist && npm publish",
    "postrelease": "npm run build:clean && npm run gh-pages",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phillipcurl/ngx-warehouse.git"
  },
  "keywords": [
    "websql",
    "localforage",
    "indexeddb",
    "localstorage",
    "angular2",
    "angular"
  ],
  "author": "Phillip Curl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phillipcurl/ngx-warehouse/issues"
  },
  "homepage": "https://github.com/phillipcurl/ngx-warehouse#readme",
  "devDependencies": {
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@types/chai": "^4.0.4",
    "@types/core-js": "0.9.35",
    "@types/jasmine": "^2.6.2",
    "@types/localforage": "0.0.34",
    "@types/sinon": "^2.3.7",
    "@types/sinon-chai": "^2.7.29",
    "awesome-typescript-loader": "^3.3.0",
    "chai": "^4.1.2",
    "codelyzer": "4.0.0",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.0",
    "conventional-changelog": "^1.1.6",
    "conventional-changelog-cli": "^1.3.4",
    "core-js": "^2.5.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "imports-loader": "^0.7.1",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.5",
    "phantomjs-prebuilt": "^2.1.15",
    "rxjs": "^5.5.2",
    "sinon": "^4.0.2",
    "sinon-chai": "^2.14.0",
    "sourcemap-istanbul-instrumenter-loader": "^0.2.0",
    "standard-version": "^4.2.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typedoc": "^0.5.0",
    "typescript": "~2.6.1",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.16.1",
    "zone.js": "^0.8.18"
  },
  "peerDependencies": {
    "@angular/core": "^5.0.0"
  },
  "files": ["dist"],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "localforage": "^1.5.3"
  }
}
